{
  "functions": {
    "app/api/**/route.ts": {
      "includeFiles": "node_modules/tesseract.js-core/tesseract-core-simd.wasm",
      "memory": 1024,
      "maxDuration": 60
    }
  },  
  "crons": [
    {
      "path": "/api/detect-instagram-deletion",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/order-management/check-new-orders",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/dailyCron",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/chatbot/publisher/auto-post",
      "schedule": "0 * * * *"
    }
  ]
}